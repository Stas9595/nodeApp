<h1>Basket</h1>

{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{name}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
{{else}}
    <p>Basket is empty</p>
{{/if}}