<h1>Courses</h1>

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card" id="courses">
                    <div class="card-image">
                        <img src="{{_doc.img}}" alt="{{_doc.title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{_doc.title}}</span>
                        <p class="price">{{_doc.price}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/courses/{{_doc._id}}" target="_blank">Open course</a>
                        {{#if @root.isAuth}}
                        <a href="/courses/{{_doc._id}}/edit?allow=true" target="_blank">Edit</a>
                        <form action="/card/add" method="post">
                            <input type="hidden" name="id" value="{{_doc._id}}">
                            <button class="btn btn-primary" type="submit">Buy</button>
                        </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>No Courses</p>
{{/if}}